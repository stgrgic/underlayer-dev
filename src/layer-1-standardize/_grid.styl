//Promijenio sam ime u containers, jer ima
//vise smisla, u odnosu kada
//zelim koristiti breakpoint

for size, value in ($containers) {
    +above(value) {
        for column in ($grid-columns..1) {
            .d{size}-{column} {
               >.box {
                   width (100/column)%
               } 
            }
        }
    }
}


