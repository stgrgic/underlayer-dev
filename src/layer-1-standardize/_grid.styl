// Flex container
.flex-container {
    display flex
    flex-direction row
    flex-wrap wrap
    // justify-content flex-start
    width 100%
    margin 0 auto
    // padding 0 ($gutter/2)
    list-style none
    
    &.j-center {
        justify-content center
    }
    &.j-between {
        justify-content space-between
    }
    &.a-center {
        align-items center
    }
    &.a-end {
        align-items flex-end
    }
    &.a-start {
        align-items flex-start
    }
}

.column {
    flex-direction column
}

