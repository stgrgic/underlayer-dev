btn($color-bg, $color-font=#fff){
    background-color $color-bg
    border 1px solid darken($color-bg, 20%)
    font-weight 500
    border-radius 2px
    padding 0.5em 1em
    font-size inherit
    // font-size .875rem
    line-height 1.3
    cursor pointer
    color $color-font
    transition all 0.08s ease
    no-select()
    &:hover {
        background-color darken($color-bg, 10%)
    }
    // Focus stays after button is clicked only on
    // Chrome/macOS and it is better not to touch it
    // &:focus {
    //     outline none
    //     border 1px solid #333
    // }
    &:active {
        box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.20);
    }
}
.btn {
    // creates btn styling that gets overwriten
    // on all btn classes
    // find some work around
    // btn(#fff, #000)
    &.primary{
         btn($color__primary)
    }
    &.secondary{
         btn(#F5F5F5, #333)
    }
}







