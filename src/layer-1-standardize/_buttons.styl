// fix for file type
input, textarea {
    background-color #fff
    border 1px solid #D2D2D2
    padding 0.5625rem 1rem
    margin-bottom 1rem
    font-family inherit
    font-size inherit
    border-radius 2px
    color #333
    cursor pointer
}

