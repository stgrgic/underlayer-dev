// Form elements


.u-input-group {
    // background-color #afa
    label {
        // background-color #aaf
        display block
        line-height 1
        margin-bottom 7px
        font-weight 500
        font-size 14px
    }
    .u-input {
        // background-color #ffa
        display block
        width 100%
        font-size 14px
        box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.10);
        border-radius: 2px;
        &:focus {
            outline none
            // box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.20), 0px 0px 3px 1px rgba(blue, 0.75)
            border 1px solid #FF9308
        }
    }
}


